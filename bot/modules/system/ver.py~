def img():#–ú–µ–Ω—é –∫–∞—Ä—Ç–∏–Ω–æ–∫
	api.pyTelegramApi.UpdateRedirect('main')
	#–ù–∞–≤–∏–≥–∞—Ü–∏—è
	hbk=api.pyTelegramApi.getRedirect(__name__)
	#–ö–Ω–æ–ø–∫–∏
	ava=api.pyTelegramApi.getKeyboardBtn({'txt':'–ê—Ä—Ç 2–¥ —Ä–∞–Ω–¥–æ–º–Ω—ã–π','func':'SendRandomWaifu2d@'+__name__}) #–ö–Ω–æ–ø–∫–∞
	#–Ø—á–µ–π–∫–∏
	item3=api.pyTelegramApi.getKeyboardItem(ava)
	api.pyTelegramApi.keyboard(api,'–ú–µ–Ω—é –∫–∞—Ä—Ç–∏–Ω–æ–∫ :)',hbk+','+item3)

def system(): #–ú–µ–Ω—é —Å–∏—Å—Ç–µ–º–Ω—ã–µ
	api.pyTelegramApi.UpdateRedirect('main')
	chat_id=api.pyTelegramApi.getChatId(api)
	#–ù–∞–≤–∏–≥–∞—Ü–∏—è
	hbk=api.pyTelegramApi.getRedirect(__name__)
	#–Ø—á–µ–π–∫–∏
	api.pyTelegramApi.keyboard(api,"–û–± –∫–æ–Ω—Ñ–µ\nID =>**{0}**".format(chat_id),hbk)

def ixbt(): #–ú–µ–Ω—é –Ω–æ–≤–æ—Å—Ç–∏
