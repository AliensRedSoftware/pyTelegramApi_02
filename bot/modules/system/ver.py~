def main():
	api.pyTelegramApi.UpdateRedirect('main')
	#–ö–Ω–æ–ø–∫–∏
	img=api.pyTelegramApi.getKeyboardBtn({'txt':'üñº –ö–∞—Ä—Ç–∏–Ω–∫–∏','func':'img@'+__name__}) #–ú–µ–Ω—é –∫–∞—Ä—Ç–∏–Ω–æ–∫
