	#–ù–∞–≤–∏–≥–∞—Ü–∏—è
	hbk=api.pyTelegramApi.getRedirect(__name__)
	#–ö–Ω–æ–ø–∫–∏
	NEW=api.pyTelegramApi.getKeyboardBtn({'txt':'üÜï –í–æ–∑–≤—Ä–∞—â–∞–µ–º –Ω–æ–≤–æ–µ','func':'getNewIxbt@'+__name__}) #–ù–æ–≤–∞—è –Ω–æ–≤–æ—Å—Ç—å
	Random=api.pyTelegramApi.getKeyboardBtn({'txt':'üé≤ –í–æ–∑–≤—Ä–∞—â–∞–µ–º —Ä–∞–Ω–¥–æ–º–Ω–æ–µ','func':'getRandomIxbt@'+__name__}) #–†–∞–Ω–¥–æ–º–Ω–æ–µ
	#–Ø—á–µ–π–∫–∏
	item=api.pyTelegramApi.getKeyboardItem(NEW)
	item1=api.pyTelegramApi.getKeyboardItem(Random)
	api.pyTelegramApi.keyboard(api,"–ú–µ–Ω—é –Ω–æ–≤–æ—Å—Ç–∏ ixbt :)",hbk+','+item+','+item1)

