	donate=api.pyTelegramApi.getKeyboardBtn({'txt':'üí∞ –ü–æ–º–æ—á—å –∞–≤—Ç–æ—Ä—É','func':'donate@'+__name__})#–î–æ–Ω–∞—Ç
